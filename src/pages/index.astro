---
import Layout from "../layouts/Layout.astro";
import AppHeader from "../components/AppHeader.astro";
import HeroSection from "../components/HeroSection.astro";
import MarketSection from "../components/MarketSection.astro";
import PlayStationGames from "../components/PlayStationGames.astro";
import GiftCart from "../components/GiftCart.astro";
import Timer from "../components/Timer.astro";
import AppFooter from "../components/AppFooter.astro";
---

<Layout title="Welcome to Astro.">
  <AppHeader />
  <main class="flex flex-col">
    <HeroSection />
    <MarketSection />
    <PlayStationGames />
    <GiftCart />
    <Timer />
  </main>
  <AppFooter />
</Layout>

<style>
  :root {
    scroll-behavior: smooth;
  }
</style>
