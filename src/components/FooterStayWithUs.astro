---
const links = [
  { image: "fa-brands fa-instagram", name: "Instagram" },
  { image: "fa-brands fa-linkedin-in", name: "Linkedin" },
  { image: "fa-brands fa-twitter", name: "Twitter" },
  { image: "fa-brands fa-youtube", name: "Youtube" },
  { image: "fa-regular fa-at", name: "Main" },
];
---

<div class="ct-collapsible-accordion">
  <div class="ct-collapsible-item">
    <input type="checkbox" id="stay-with-us" hidden />
    <label class="ct-collapsible-item-label" for="stay-with-us"
      >همراه ما باشید</label
    >
    <div class="ct-collapsible-item-content text-neutral-900">
      <div
        class="grid grid-cols-6 gap-2 md:grid-cols-10 lg:grid-cols-5 xl:grid-cols-4 2xl:grid-cols-6"
      >
        {
          links.map((item) => (
            <a
              href="#"
              class="flex aspect-square items-center justify-center rounded-[40%] bg-primary"
            >
              <i class:list={[item.image]} class="text-2xl text-white" />
            </a>
          ))
        }
      </div>
    </div>
  </div>
</div>
